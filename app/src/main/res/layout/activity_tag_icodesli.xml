<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#f0f0f0"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_icodesli_ant"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:gravity="center_vertical"
                    android:text="@string/tv_icodesli_ant"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/sn_icodesli_antList"
                    android:layout_width="100dp"
                    android:layout_height="40dp" />

                <Button
                    android:id="@+id/btn_icodesli_setAnt"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:text="@string/btn_icodesli_setAnt"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_icodesli_uid"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:gravity="center_vertical"
                    android:text="@string/tv_icodesli_uid"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/sn_icodesli_uidList"
                    android:layout_width="200dp"
                    android:layout_height="40dp" />

                <Button
                    android:id="@+id/btn_icodesli_inventory"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:text="@string/btn_icodesli_inventory"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#f0f0f0"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="@string/tv_icodesli_connectmode"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/sn_icodesli_connectMode"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:entries="@array/tagConnectMode" />

            <Button
                android:id="@+id/btn_icodesli_connect"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/btn_icodesli_connect"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_icodesli_disconnect"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/btn_icodesli_disconnect"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_icodesli_tagInfo"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/btn_icodesli_tagInfo"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#f0f0f0"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/tv_icodesli_addr"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/sn_icodesli_blkAddr"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/tv_icodesli_blkNum"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/sn_icodesli_blkNum"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_weight="2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="@string/tv_icodesli_dlkData"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/ed_icodesli_blkData"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:digits="0123456789abcdefABCDEF"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_icodesli_read"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/btn_icodesli_read"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_icodesli_write"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/btn_icodesli_write"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_icodesli_lockBlk"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/btn_icodesli_lock"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="@string/tv_icodesli_dsfid"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/ed_icodesli_dsfid"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:digits="0123456789abcdefABCDEF"
                    android:gravity="center_vertical|center"
                    android:inputType="text"
                    android:maxLength="2"
                    android:text="@string/ed_icodesli_dsfid" />

                <Button
                    android:id="@+id/btn_icodesli_setDsfid"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:text="@string/btn_setDsfid"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_icodesli_lockDsfid"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:text="@string/btn_lockDsfid"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="@string/tv_icodesli_afi"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/ed_icodesli_afi"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:digits="0123456789abcdefABCDEF"
                    android:gravity="center_vertical|center"
                    android:inputType="text"
                    android:maxLength="2"
                    android:text="@string/ed_icodesli_afi" />

                <Button
                    android:id="@+id/btn_icodesli_setAFI"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:text="@string/btn_setAFI"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_icodesli_lockAFI"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:text="@string/btn_lockAFI"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_icodesli_enEAS"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/btn_icodesli_enEAS"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_icodesli_disEnEAS"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/btn_icodesli_disEnEAS"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_icodesli_checkEAS"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/btn_icodesli_checkEAS"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_icodesli_lockEas"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/btn_icodesli_lockEas"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#f0f0f0"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_icodesli_pwbid"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:gravity="center_vertical"
                    android:text="@string/tv_icodesli_pwbid"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/sn_icodesli_pwbid"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_icodesli_pwb"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:gravity="center_vertical"
                    android:text="@string/tv_icodesli_pwb"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/ed_icodesli_pwb"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:inputType="text" 
                    android:text="00000000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_icodesli_authenticate"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/btn_icodesli_authenticate"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_icodesli_updatePwb"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/btn_icodesli_updatePwb"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_icodesli_enable64bitPwb"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/btn_icodesli_enable64bitPwb"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_icodesli_lockPwb"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/btn_icodesli_lockPwb"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#f0f0f0"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_icodesli_EASorAFI"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:gravity="center_vertical"
                android:text="@string/tv_icodesli_EASorAFI"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/sn_icodesli_protectEasOrAfi"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp" />

            <Button
                android:id="@+id/btn_icodesli_protectEasOrAfi"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/btn_icodesli_protectEasOrAfi"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#f0f0f0"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#f0f0f0"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_icodesli_protectBlkAddr"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:gravity="center_vertical"
                    android:text="@string/tv_icodesli_protectBlkAddr"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/sn_icodesli_protectBlkAddr"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#f0f0f0"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_icodesli_page_L_state"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:gravity="center_vertical"
                    android:text="@string/tv_icodesli_page_L_state"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/sn_icodesli_page_L_state"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#f0f0f0"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_icodesli_page_H_state"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:gravity="center_vertical"
                    android:text="@string/tv_icodesli_page_H_state"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/sn_icodesli_page_H_state"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp" />
            </LinearLayout>
            
             <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_icodesli_protectPage"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/btn_icodesli_protectPage"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_icodesli_lockPageState"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/btn_icodesli_lockPageState"
                    android:textSize="15sp" />
            </LinearLayout>
            
        </LinearLayout>
    </LinearLayout>

</ScrollView>